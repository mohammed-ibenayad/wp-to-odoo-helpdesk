{
  "manifest_version": 3,
  "name": "WhatsApp to Odoo POC",
  "version": "2.0.0",
  "description": "Convert WhatsApp conversations to Odoo tickets with AI-powered suggestions",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.odoo.com/*",
    "https://api.deepseek.com/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "css": [
        "styles/content.css",
        "styles/ai-modal.css"
      ],
      "js": [
        "modules/utils/Icons.js",
        "modules/utils/Notifications.js",
        "modules/api/BackgroundMessenger.js",
        "modules/core/MessageExtractor.js",
        "modules/ai/AIProvider.js",  
        "modules/ui/AISuggestionModal.js", 
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp to Odoo"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
  }
}