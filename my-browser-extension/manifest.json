{
  "manifest_version": 3,
  "name": "WhatsApp to Odoo POC",
  "version": "1.0.0",
  "description": "Convert WhatsApp conversations to Odoo tickets",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.odoo.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp to Odoo"
  },
  "background": {
    "service_worker": "background.js"
  }
}